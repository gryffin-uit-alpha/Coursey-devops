# ==============================================================================
# Terraform Variables Template
# ==============================================================================
# Copy this file: cp terraform.tfvars.example terraform.tfvars
# Fill in your values and run: terraform apply -var-file=terraform.tfvars
# ==============================================================================

# ===== Required Variables =====
cluster_name   = "my-eks-cluster"
region         = "us-east-1"
domain_name    = "example.com"
hosted_zone_id = "Z1234567890ABC"

# Sensitive: Set via environment variable TF_VAR_grafana_password
# grafana_password = ""

# ===== Optional: Customize Cluster =====
# Uncomment and modify as needed:

# node_group_min_size     = 1
# node_group_max_size     = 3
# node_group_desired_size = 2
# node_instance_types     = ["m7i-flex.large"]

# ===== Optional: Customize Networking =====
# vpc_cidr        = "172.20.0.0/16"
# private_subnets = ["172.20.1.0/24", "172.20.2.0/24", "172.20.3.0/24"]
